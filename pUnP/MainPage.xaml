<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pUnP.MainPage">

    <StackLayout HorizontalOptions="CenterAndExpand" >

        <Image Source="logo.png" HeightRequest="120" />

        <Label Text="Cotação de Moedas." FontSize="Title" Padding="30,10,30,10"/>

        <Label x:Name="lblUser" Text="Usuario:" FontSize="16" Padding="30,0,30,0"/>

        <Entry x:Name="entUser" />

        <Label x:Name="lblPass" Text="Senha:" FontSize="16" Padding="30,0,30,0" />

        <Entry x:Name="entPass" IsPassword="True"/>

        <Button x:Name="btnAutenticar" Text="Autenticar" Clicked="btnEnviar_Clicked" />

    </StackLayout>

</ContentPage>
