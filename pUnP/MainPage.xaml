<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pUnP.MainPage">

    <StackLayout Padding="30,10,30,10" >

        <Image Source="logo.png" HeightRequest="120" />

        <Label Text="Cotação de Moedas" FontSize="Title" HorizontalTextAlignment="Center"/>

        <Label x:Name="lblUser" Text="Usuario:" FontSize="16" Padding="30,0,30,0"/>

        <Entry x:Name="entUser" />

        <Label x:Name="lblPass" Text="Senha:" FontSize="16" Padding="30,0,30,0" />

        <Entry x:Name="entPass" IsPassword="True"/>

        <Button x:Name="btnAutenticar" Text="Acessar" Clicked="btnEnviar_Clicked" />

        <Label x:Name="lblCadastro" Text="Cadastrar Usuário" TextDecorations="Underline" TextColor="Blue" />
        
        <Label x:Name="lblSenha" Text="Esqueci minha senha" TextDecorations="Underline" TextColor="Blue" />

    </StackLayout>

</ContentPage>
